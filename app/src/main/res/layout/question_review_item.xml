<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/custom_rectangle_text_second_cr20_empty"
    android:id="@+id/item_linear_layout_root">


    <TextView
        android:id="@+id/item_text_view_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:text="Question"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_text_view_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8dp"
            android:text="Answer"
            android:textAllCaps="false"
            android:textColor="@color/colorTextThird"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/item_image_button_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8dp"
            android:background="@android:color/transparent"
            android:tint="@color/colorTextThird"
            app:srcCompat="@drawable/ic_favorite_border_24px"
            />


    </LinearLayout>
</LinearLayout>